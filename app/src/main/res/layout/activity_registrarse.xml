<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="35dp"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="org.lapoderosa.app.RegistrarseActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:layout_above="@+id/mName"
        android:gravity="center"
        android:text="Registrarse"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/mName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/mApellido"
        android:hint="Nombre"
        android:layout_marginTop="10dp"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/mApellido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/mEmail"
        android:layout_marginTop="10dp"
        android:hint="Apellido"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/mEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:hint="Email"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/mPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mEmail"
        android:layout_marginTop="10dp"
        android:hint="Contraseña"
        android:inputType="textPassword"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/mPassword2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/mPassword"
        android:hint="Confirmar contraseña"
        android:inputType="textPassword"
        android:textSize="20dp" />

    <Button
        android:id="@+id/mRegistrarseBtn"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/mPassword2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="#FA5858"
        android:text="Registrarse"
        android:textColor="#FFF"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/mLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mRegistrarseBtn"
        android:gravity="center"
        android:padding="20dp"
        android:text="¿Estas Registrado?, Inicia Sesion"
        android:textSize="15sp" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:visibility="invisible" />
</RelativeLayout>