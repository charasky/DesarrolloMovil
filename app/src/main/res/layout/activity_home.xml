<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="40dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="org.lapoderosa.app.normal.HomeActivity">

    <ImageView
        android:id="@+id/splashView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30sp"
        android:foregroundGravity="center"
        android:padding="5dp"
        app:srcCompat="@drawable/splash"
        tools:ignore="ContentDescription" />

    <RelativeLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/homeIngresar"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            style="@style/buttonFormat"
            android:background="@drawable/custom_bottom"
            android:gravity="center"
            android:text="@string/ingresar"/>

        <TextView
            android:background="?android:attr/selectableItemBackground"
            android:id="@+id/homeRegistrarse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/homeIngresar"
            android:layout_marginTop="15dp"
            android:padding="8dp"
            android:gravity="center"
            android:text="@string/REGISTRARSE3"
            style="@style/home" />

        <TextView
            android:background="?android:attr/selectableItemBackground"
            android:id="@+id/homeReporteAnonimo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/homeRegistrarse"
            android:padding="8dp"
            android:gravity="center"
            android:text="@string/reporte_anonimo"
            style="@style/home" />

        <TextView
            android:background="?android:attr/selectableItemBackground"
            android:id="@+id/homeContacto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/homeReporteAnonimo"
            android:padding="8dp"
            android:gravity="center"
            android:text="@string/contacto"
            style="@style/home" />

        <TextView
            android:textColor="#BCBBBB"
            android:id="@+id/textVersion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="@string/aÃ±o"
            android:textSize="13sp" />
    </RelativeLayout>
</LinearLayout>