<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="40dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="org.lapoderosa.app.normal.HomeActivity">

    <ImageView
        android:id="@+id/splashView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30sp"
        android:foregroundGravity="center"
        android:padding="5dp"
        app:srcCompat="@drawable/splash"
        tools:ignore="ContentDescription" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/homeIngresar"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/custom_bottom"
            android:gravity="center"
            android:importantForAutofill="no"
            android:text="@string/ingresar"
            android:textColor="#FFF"
            android:textSize="20sp"
            tools:ignore="LabelFor" />

        <TextView
            android:id="@+id/homeRegistrarse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/homeIngresar"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="@string/REGISTRARSE3"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView

            android:id="@+id/homeReporteAnonimo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/homeRegistrarse"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/reporte_anonimo"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/homeContacto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/homeReporteAnonimo"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/contacto"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textVersion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="@string/aÃ±o"
            android:textSize="13sp" />
    </RelativeLayout>
</LinearLayout>